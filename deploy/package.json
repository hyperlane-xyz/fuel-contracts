{
  "name": "deploy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "fuels": "^0.28.0"
  },
  "scripts": {
    "build": "yarn build-contracts && yarn generate-types",
    "build-contracts": "cd .. && forc build",
    "deploy": "yarn build && ts-node ./src/deploy.ts",
    "deploy-and-send-message": "yarn deploy send-message",
    "generate-types": "yarn exec -- fuelchain --target=fuels --out-dir=types ../contracts/hyperlane-mailbox/out/debug/hyperlane-mailbox-abi.json",
    "local-node": "fuel-core run --chain local_testnet --db-type in-memory --dev-keys true",
    "prettier": "prettier --write ./src tsconfig.json"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "fuelchain": "^0.21.2",
    "prettier": "^2.8.0",
    "typechain-target-fuels": "^0.21.2"
  }
}
